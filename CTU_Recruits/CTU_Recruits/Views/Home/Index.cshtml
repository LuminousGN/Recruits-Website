@model IEnumerable<CTU_Recruits.Models.ApplicationUser>

@{
    ViewBag.Title = "Home Page";
}

@using Microsoft.AspNet.Identity

<main class="page lanidng-page">
    <div class="btn-toolbar d-flex d-sm-flex d-md-flex d-lg-flex d-xl-flex justify-content-center align-items-center justify-content-sm-center align-items-sm-center justify-content-md-center align-items-md-center justify-content-lg-center align-items-lg-center justify-content-xl-center align-items-xl-center"
         style="margin-top: 40px;margin-bottom: -40px;">
        <div class="btn-group" role="group"></div>
        <div class="btn-group" role="group"></div>
    </div>
    <section class="portfolio-block block-intro" style="padding-top: 100px;padding-bottom: 100px;">
        <section class="portfolio-block skills" style="padding-top: 0px;">
            <div class="container">
                <div class="heading">
                    <h2>What is it that you are looking for?</h2>
                </div>
                <div class="row">
                    @if (Request.IsAuthenticated)
                    {
                        if (System.Web.HttpContext.Current.User.IsInRole("JobSeeker") || System.Web.HttpContext.Current.User.IsInRole("Superadmin") || System.Web.HttpContext.Current.User.IsInRole("Admin") || System.Web.HttpContext.Current.User.IsInRole("ModeratorAdmin"))
                        {
                            if (System.Web.HttpContext.Current.User.IsInRole("JobSeeker"))
                            {
                                <div class="row text-center d-flex d-sm-flex d-md-flex d-lg-flex d-xl-flex justify-content-center align-items-center justify-content-sm-center align-items-sm-center justify-content-md-center justify-content-lg-center justify-content-xl-center">
                                    <div class="col-md-9 col-xl-4 offset-md-0 offset-lg-0 offset-xl-0" style="padding-bottom: 30px;">
                                        <div class="card special-skill-item border-0">
                                            <div class="card-header bg-transparent border-0"><i class="icon ion-ios-briefcase"></i></div>
                                            <div class="card-body" style="padding-bottom: 0px;">
                                                <h3 class="card-title">Career Hunting?</h3>
                                                <p class="card-text">You&#39;ve come to the right place! with our amazing CV creation tool, you can create a gorgeous and detailed CV that you can then post on our CV page or keep it private for specific people, it&#39;s all up to you!</p>
                                            </div>
                                        </div>
                                        @Html.ActionLink("Create CV!", "PersonalCV", "Account", new { email = User.Identity.GetUserName() }, htmlAttributes: new { @class = "btn btn-primary" })
                                    </div>
                                </div>
                            }
                            else if (System.Web.HttpContext.Current.User.IsInRole("Superadmin") || System.Web.HttpContext.Current.User.IsInRole("Admin") || System.Web.HttpContext.Current.User.IsInRole("ModeratorAdmin"))
                            {

                                <div class="col-md-4 offset-md-2 offset-lg-2 offset-xl-2" style="padding-bottom: 30px;">
                                    <div class="card special-skill-item border-0">
                                        <div class="card-header bg-transparent border-0"><i class="icon ion-ios-briefcase"></i></div>
                                        <div class="card-body" style="padding-bottom: 0px;">
                                            <h3 class="card-title">Career Hunting?</h3>
                                            <p class="card-text">You've come to the right place! with our amazing CV creation tool, you can create a gorgeous and detailed CV that you can then post on our CV page or keep it private for specific people, it's all up to you!</p>
                                        </div>
                                    </div>
                                    @Html.ActionLink("Create CV!", "PersonalCV", "Account", new { email = User.Identity.GetUserName() }, htmlAttributes: new { @class = "btn btn-primary" })
                                </div>

                            }
                        }
                        else
                        {

                        }

                        if (System.Web.HttpContext.Current.User.IsInRole("Employer") || System.Web.HttpContext.Current.User.IsInRole("Superadmin") || System.Web.HttpContext.Current.User.IsInRole("Admin") || System.Web.HttpContext.Current.User.IsInRole("ModeratorAdmin"))
                        {
                            if (System.Web.HttpContext.Current.User.IsInRole("Employer"))
                            {
                                <div class="row text-center d-flex d-sm-flex d-md-flex d-lg-flex d-xl-flex justify-content-center align-items-center justify-content-sm-center align-items-sm-center justify-content-md-center justify-content-lg-center justify-content-xl-center">
                                    <div class="col-md-9 col-xl-4 offset-md-0 offset-lg-0 offset-xl-0" style="padding-bottom: 30px;">
                                        <div class="card special-skill-item border-0">
                                            <div class="card-header bg-transparent border-0"><i class="icon ion-ios-briefcase"></i></div>
                                            <div class="card-body" style="padding-bottom: 0px;">
                                                <h3 class="card-title">Employing</h3>
                                                <p class="card-text">Look no further! You will find 100's of proffesionally created CV's using our premium CV creation tool. You can easily filter through them by searching for specific keywords!</p>
                                            </div>
                                        </div>
                                        <a class="btn btn-primary" href="@Url.Action("ListCV", null, new { area = string.Empty, controller = "Account" }, Request.Url.Scheme)">
                                            <span>Browse CV's</span>
                                        </a>
                                    </div>
                                </div>
                            }
                            else if (System.Web.HttpContext.Current.User.IsInRole("Superadmin") || System.Web.HttpContext.Current.User.IsInRole("Admin") || System.Web.HttpContext.Current.User.IsInRole("ModeratorAdmin"))
                            {
                                <div class="col-md-4">
                                    <div class="card special-skill-item border-0">
                                        <div class="card-header bg-transparent border-0"><i class="icon ion-ios-personadd"></i></div>
                                        <div class="card-body" style="height: 100%;padding-bottom: 0px;">
                                            <h3 class="card-title">Employing?</h3>
                                            <p class="card-text">Look no further! You will find 100's of proffesionally created CV's using our premium CV creation tool. You can easily filter through them by searching for specific keywords!</p>
                                        </div>
                                    </div>
                                    <a class="btn btn-primary" href="@Url.Action("ListCV", null, new { area = string.Empty, controller = "Account" }, Request.Url.Scheme)">
                                        <span>Browse CV's</span>
                                    </a>
                                </div>
                            }
                        }
                        else
                        {

                        }
                    }
                    else
                    {
                        <div class="col-md-4 offset-md-2 offset-lg-2 offset-xl-2" style="padding-bottom: 30px;">
                            <div class="card special-skill-item border-0">
                                <div class="card-header bg-transparent border-0"><i class="icon ion-ios-briefcase"></i></div>
                                <div class="card-body" style="padding-bottom: 0px;">
                                    <h3 class="card-title">Career Hunting?</h3>
                                    <p class="card-text">You've come to the right place! with our amazing CV creation tool, you can create a gorgeous and detailed CV that you can then post on our CV page or keep it private for specific people, it's all up to you!</p>
                                </div>
                            </div>
                            @Html.ActionLink("Create CV!", "PersonalCV", "Account", new { email = User.Identity.GetUserName() }, htmlAttributes: new { @class = "btn btn-primary" })
                        </div>
                        <div class="col-md-4">
                            <div class="card special-skill-item border-0">
                                <div class="card-header bg-transparent border-0"><i class="icon ion-ios-personadd"></i></div>
                                <div class="card-body" style="height: 100%;padding-bottom: 0px;">
                                    <h3 class="card-title">Employing?</h3>
                                    <p class="card-text">Look no further! You will find 100's of proffesionally created CV's using our premium CV creation tool. You can easily filter through them by searching for specific keywords!</p>
                                </div>
                            </div>
                            <a class="btn btn-primary" href="@Url.Action("ListCV", null, new { area = string.Empty, controller = "Account" }, Request.Url.Scheme)">
                                <span>Browse CV's</span>
                            </a>
                        </div>

                    }
                </div>
            </div>
        </section>
        <h1></h1>
        <section class="portfolio-block website gradient">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-12 col-lg-5 offset-lg-1 text">
                        <h3>What is CTU Recruits?</h3>
                        <p>We are a company originally created by CTU to help job seekers find their dream jobs and help recruiters find their dream employees to build an amazing dream team!</p>
                    </div>
                    <div class="col-md-12 col-lg-5">
                        <div class="portfolio-laptop-mockup">
                            <div class="screen">
                                <div class="screen-content" style="background-image: url('../../img/brightCTU 1-04_0.png');width: 100%;height: 100%;margin: 18px;margin-top: 2px;padding-top: 0px;background-color: rgba(255,255,255,0);background-size: contain;background-repeat: no-repeat;background-position: center;margin-right: 10px;margin-left: 0px;"></div>
                            </div>
                            <div class="keyboard"></div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </section>
</main>