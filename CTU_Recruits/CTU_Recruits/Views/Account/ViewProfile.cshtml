@model CTU_Recruits.Models.ViewProfile

@{
    ViewBag.Title = "EditUser";
}
@using Microsoft.AspNet.Identity

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    <main class="page lanidng-page">
        <div class="btn-toolbar d-flex d-sm-flex d-md-flex d-lg-flex d-xl-flex justify-content-center align-items-center justify-content-sm-center align-items-sm-center justify-content-md-center align-items-md-center justify-content-lg-center align-items-lg-center justify-content-xl-center align-items-xl-center"
             style="margin-top: 40px;margin-bottom: -40px;">
            <div class="btn-group" role="group"></div>
            <div class="btn-group" role="group"></div>
        </div>
    </main>
    <main class="page cv-page">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Email)
        <section class="portfolio-block block-intro border-bottom">
            <div class="container">
                <div class="row text-center d-md-flex d-lg-flex d-xl-flex justify-content-md-center align-items-md-center justify-content-lg-center align-items-lg-center justify-content-xl-center align-items-xl-center" style="padding-bottom: 52px;">
                    <div class="col-md-3 col-lg-2 col-xl-2 text-center d-xl-flex" style="padding-right: 0px;padding-left: 0px;">
                        <div class="d-xl-flex avatar" style="margin-bottom: 0px;">
                            <img src="@Url.Action("UserPhotos", "Home")" style="width:160px;height:160px; background: #FFFFFF;
                                 margin: auto;
                                 -moz-border-radius: 60px;
                                 border-radius: 100px;
                                 padding: 6px;
                                 box-shadow: 0px 0px 20px #888;" />
                        </div>
                    </div>
                    <div class="col-md-5 col-lg-4 col-xl-4 d-flex justify-content-center align-items-center">
                        <div class="contact-info portfolio-info-card">
                            <h2 class="text-left">@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h2>
                            <div class="row">
                                <div class="col-1"><i class="icon ion-android-calendar icon"></i></div>
                                <div class="col-9 text-left"><span>@Html.DisplayFor(model => model.DateOfBirth)</span></div>
                            </div>
                            <div class="row">
                                <div class="col-1"><i class="icon ion-ios-telephone icon"></i></div>
                                <div class="col-9 text-left"><span>@Html.DisplayFor(model => model.PhoneNumber)</span></div>
                            </div>
                            <div class="row">
                                <div class="col-1"><i class="icon ion-at icon"></i></div>
                                <div class="col-9 text-left">
                                    <span>
                                        @Html.DisplayFor(model => model.Email)
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="about-me">
                <p>@Html.DisplayFor(model => model.ShortDescription)</p>
                @if (System.Web.HttpContext.Current.User.IsInRole("Employer") || System.Web.HttpContext.Current.User.IsInRole("Superadmin") || System.Web.HttpContext.Current.User.IsInRole("Admin") || System.Web.HttpContext.Current.User.IsInRole("ModeratorAdmin"))
                {

                    if (User.Identity.GetUserName() == Model.Email)
                    {
                        //Checks to see if it's your profile that you are viewing
                    }
                    else
                    {
                        @Html.ActionLink("Hire Me", "HireMe", new { email = Model.Email}, htmlAttributes: new { @class = "btn btn-primary" })
                    }

                }
                else
                {

                }

            </div>
        </section>
        <section class="portfolio-block cv">
            @if (Model.Visibility == null)
            {

            }
            else
            {
                <div class="container">
                    @if (Model.Work_Title1 == null && Model.Work_Name1 == null && Model.Work_DateStart1 == null && Model.Work_DateEnd1 == null && Model.Work_Description1 == null && Model.Work_Title2 == null && Model.Work_Name2 == null && Model.Work_DateStart2 == null && Model.Work_DateEnd2 == null && Model.Work_Description2 == null && Model.Work_TItle3 == null && Model.Work_Name3 == null && Model.Work_DateStart3 == null && Model.Work_DateEnd3 == null && Model.Work_Description3 == null)
                    {
                        // if all work experience fields are empty it will not display
                    }
                    else
                    {
                        <div class="work-experience group">
                            <div class="heading">
                                <h2 class="text-center">Work Experience</h2>
                            </div>
                            @if (Model.Work_Title1 == null && Model.Work_Name1 == null && Model.Work_DateStart1 == null && Model.Work_DateEnd1 == null && Model.Work_Description1 == null)
                            {
                                // if the tab is empty it will not display
                            }
                            else
                            {
                                <div class="item">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h3>@Html.DisplayFor(model => model.Work_Title1)</h3>
                                            <h4 class="organization">@Html.DisplayFor(model => model.Work_Name1)</h4>
                                        </div>
                                        <div class="col-md-6"><span class="period">@Html.DisplayFor(model => model.Work_DateStart1) - @Html.DisplayFor(model => model.Work_DateEnd1)</span></div>
                                    </div>
                                    <p class="text-muted">@Html.DisplayFor(model => model.Work_Description1)</p>
                                </div>
                            }
                            @if (Model.Work_Title2 == null && Model.Work_Name2 == null && Model.Work_DateStart2 == null && Model.Work_DateEnd2 == null && Model.Work_Description2 == null)
                            {
                                // if the tab is empty it will not display
                            }
                            else
                            {
                                <div class="item">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h3>@Html.DisplayFor(model => model.Work_Title2)</h3>
                                            <h4 class="organization">@Html.DisplayFor(model => model.Work_Name2)</h4>
                                        </div>
                                        <div class="col-md-6"><span class="period">@Html.DisplayFor(model => model.Work_DateStart2) - @Html.DisplayFor(model => model.Work_DateEnd2)</span></div>
                                    </div>
                                    <p class="text-muted">@Html.DisplayFor(model => model.Work_Description2)</p>
                                </div>
                            }
                            @if (Model.Work_TItle3 == null && Model.Work_Name3 == null && Model.Work_DateStart3 == null && Model.Work_DateEnd3 == null && Model.Work_Description3 == null)
                            {
                                // if the tab is empty it will not display
                            }
                            else
                            {
                                <div class="item">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h3>@Html.DisplayFor(model => model.Work_TItle3)</h3>
                                            <h4 class="organization">@Html.DisplayFor(model => model.Work_Name3)</h4>
                                        </div>
                                        <div class="col-md-6"><span class="period">@Html.DisplayFor(model => model.Work_DateStart3) - @Html.DisplayFor(model => model.Work_DateEnd3)</span></div>
                                    </div>
                                    <p class="text-muted">@Html.DisplayFor(model => model.Work_Description3)</p>
                                </div>
                            }
                        </div>
                    }
                    @if (Model.Edu_Title1 == null && Model.Edu_School1 == null && Model.Edu_DateStart1 == null && Model.Edu_DateEnd1 == null && Model.Edu_Description1 == null && Model.Edu_Title2 == null && Model.Edu_School2 == null && Model.Edu_DateStart2 == null && Model.Edu_DateEnd2 == null && Model.Edu_Description2 == null && Model.Edu_Title3 == null && Model.Edu_School3 == null && Model.Edu_DateStart3 == null && Model.Edu_DateEnd3 == null && Model.Edu_Description3 == null)
                    {
                        // if all education fields are empty it will not display
                    }
                    else
                    {
                        <div class="education group">
                            <div class="heading">
                                <h2 class="text-center">Education</h2>
                            </div>
                            @if (Model.Edu_Title1 == null && Model.Edu_School1 == null && Model.Edu_DateStart1 == null && Model.Edu_DateEnd1 == null && Model.Edu_Description1 == null)
                            {
                                // if the tab is empty it will not display
                            }
                            else
                            {
                                <div class="item">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h3>@Html.DisplayFor(model => model.Edu_Title1)</h3>
                                            <h4 class="organization">@Html.DisplayFor(model => model.Edu_School1)</h4>
                                        </div>
                                        <div class="col-6"><span class="period">@Html.DisplayFor(model => model.Edu_DateStart1) - @Html.DisplayFor(model => model.Edu_DateEnd1)</span></div>
                                    </div>
                                    <p class="text-muted">@Html.DisplayFor(model => model.Edu_Description1)</p>
                                </div>
                            }
                            @if (Model.Edu_Title2 == null && Model.Edu_School2 == null && Model.Edu_DateStart2 == null && Model.Edu_DateEnd2 == null && Model.Edu_Description2 == null)
                            {
                                // if the tab is empty it will not display
                            }
                            else
                            {
                                <div class="item">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h3>@Html.DisplayFor(model => model.Edu_Title2)</h3>
                                            <h4 class="organization">@Html.DisplayFor(model => model.Edu_School2)</h4>
                                        </div>
                                        <div class="col-6"><span class="period">@Html.DisplayFor(model => model.Edu_DateStart2) - @Html.DisplayFor(model => model.Edu_DateEnd2)</span></div>
                                    </div>
                                    <p class="text-muted">@Html.DisplayFor(model => model.Edu_Description2)</p>
                                </div>
                            }
                            @if (Model.Edu_Title3 == null && Model.Edu_School3 == null && Model.Edu_DateStart3 == null && Model.Edu_DateEnd3 == null && Model.Edu_Description3 == null)
                            {
                                // if the tab is empty it will not display
                            }
                            else
                            {
                                <div class="item">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h3>@Html.DisplayFor(model => model.Edu_Title3)</h3>
                                            <h4 class="organization">@Html.DisplayFor(model => model.Edu_School3)</h4>
                                        </div>
                                        <div class="col-6"><span class="period">@Html.DisplayFor(model => model.Edu_DateStart3) - @Html.DisplayFor(model => model.Edu_DateEnd3)</span></div>
                                    </div>
                                    <p class="text-muted">@Html.DisplayFor(model => model.Edu_Description3)</p>
                                </div>
                            }
                        </div>
                    }
                    <div class="other group">
                        <div class="row">
                            @if (Model.Skill1 == null && Model.Skill2 == null && Model.Skill3 == null)
                            {
                                // if the skills tab is empty it will not display
                            }
                            else
                            {
                                <div class="col-md-6">
                                    <div class="skills portfolio-info-card">
                                        <h2>Top Skills</h2>
                                        @if (Model.Skill1 == null)
                                        {
                                            // if skill1 is empty it will not display
                                        }
                                        else
                                        {
                                            <h3>1. @Html.DisplayFor(model => model.Skill1)</h3>
                                        }
                                        @if (Model.Skill2 == null)
                                        {
                                            // if skill2 is empty it will not display
                                        }
                                        else
                                        {
                                            <h3>2. @Html.DisplayFor(model => model.Skill2)</h3>
                                        }
                                        @if (Model.Skill3 == null)
                                        {
                                            // if skill3 is empty it will not display
                                        }
                                        else
                                        {
                                            <h3>3. @Html.DisplayFor(model => model.Skill3)</h3>
                                        }
                                    </div>
                                </div>
                            }
                            @if (Model.Hobbies_Desc == null)
                            {
                                // if hobbies is empty it will not display
                            }
                            else
                            {
                                <div class="col-md-6">
                                    <div class="contact-info portfolio-info-card">
                                        <h2 class="text-left">Hobbies</h2>
                                        <p class="text-justify text-muted">
                                            @Html.DisplayFor(model => model.Hobbies_Desc)
                                        </p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </section>
    </main>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


